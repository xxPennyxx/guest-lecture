<!DOCTYPE html>
<html>
<head>
<title><%=event1.name %></title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
body,h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}

body, html {
  height: 100%;
  line-height: 1.8;
}

/* Full height image header */
.bgimg-1 {
  background-position: center;
  background-size: cover;
  background-image: url("https://t4.ftcdn.net/jpg/04/95/28/65/360_F_495286577_rpsT2Shmr6g81hOhGXALhxWOfx1vOQBa.jpg");
  min-height: 100%;
}

.w3-bar .w3-button {
  padding: 16px;
}

.image-cropper {
  width: 200px;
  height: 200px;
  position: relative;
  overflow: hidden;
  border-radius: 50%;
}
.bio{
    width:75%
}

img {
  display: inline;
  margin: 0 auto;
  height: 100%;
  width: auto;
}
    .round{
        border-radius: 50%;
        
    }
    .centered{
        text-align: center;
        margin: auto;
    }
    .agenda{
        width:80%;
        margin: auto;
    }

    .tags {
-moz-border-radius: 15px;
-webkit-border-radius: 15px;
border-style: solid;
border-color: white;
border-radius: 10px;
padding: 5px;
margin-right:7.5px;
margin-top:7.5px;
margin-bottom:7.5px;
} 
</style>
</head>
<body>

<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-card" id="myNavbar">
    <a style="text-decoration: none;" href="/dashboard"><img src="amrita.png" height="9%" width="9%"><span style="text-decoration: none; font-size: 1.35rem; font-weight: 500;"> Guest Lecture Portal</span></a>
    <!-- Right-sided navbar links -->
    <div class="w3-right w3-hide-small">
      <a href="" class="w3-bar-item w3-button">Welcome, <b>Admin</b></a>
      <a href="#feedback" class="w3-bar-item w3-button"><i class="fa fa-question"></i> FEEDBACK</a>
      <a href="#contact" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> CONTACT</a>
      <a href="/" class="w3-bar-item w3-button"><i class="fa fa-arrow-right"></i> LOG OUT</a>
    </div>
    <!-- Hide right-floated links on small screens and replace them with a menu icon -->

    <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="w3_open()">
      <i class="fa fa-bars"></i>
    </a>
  </div>
</div>

<!-- Sidebar on small screens when clicking the menu icon -->
<nav class="w3-sidebar w3-bar-block w3-black w3-card w3-animate-left w3-hide-medium w3-hide-large" style="display:none" id="mySidebar">
  <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button w3-large w3-padding-16">Close Ã—</a>
  <a href="" class="w3-bar-item w3-button">Welcome, <b>Admin</b></a>
      <a href="#feedback" class="w3-bar-item w3-button"><i class="fa fa-question"></i> FEEDBACK</a>
      <a href="#contact" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> CONTACT</a>
      <a href="/" class="w3-bar-item w3-button"><i class="fa fa-arrow-right"></i> LOG OUT</a>
</nav>

<!-- Header with full-height image -->
<header class="bgimg-1 w3-display-container w3-grayscale-min" id="home">
  <div class="w3-display-left w3-text-white" style="padding:48px">
    <span class="w3-jumbo w3-hide-small"><%=event1.name %></span><br>

    <% if(event1.days!=1) {%>
    <span class="w3-large"><%= new Date(event1.startdate).toDateString() %> - <%= new Date(event1.enddate).toDateString() %> </span><br>
    <% }else{ %> 
        <span class="w3-large"><%= new Date(event1.startdate).toDateString() %></span><br>

        <% }%>

        <span class="w3-large"><%= event1.starttime %> - <%= event1.endtime %></span><br>




    <% if(event1.venue==="N/A"){ %>

      <span class="w3-large">Virtual event</span><br><br>
    
    
    <% } else {  %>
    
      <span class="w3-large"><%= event1.venue %></span><br><br>
    
    
     <% } %>
    <% event1.tags.forEach(function(t){ %>

        <span class="tags"><%=t%></span> 




    <% }) %>
    <!-- Disable the RSVP button if it's already OVER-->
  </div> 

</header>

<!-- About Section -->


<div class="w3-container w3-row w3-center centered w3-dark-grey w3-padding-64">
  <h1 class="w3-xxxlarge w3-center">About this event</h1>

  <p class="w3-center w3-large" style="margin: 0 5rem"> <%= event1.desc1 %></p>

  <br><br>


</div>





<!-- Team Section -->
<div class="w3-container centered" style="padding:16px 16px" id="team">
    <h1 class="w3-xxxlarge w3-center">Speakers</h1>
  
  <div class="w3-row-padding w3-center centered" style="margin-top:64px">
    

   <% event1.speakers.forEach(function(s){ %>

        <div class="centered w3-center bio">
            <div class="image-cropper round centered">
                <img src="<%=s.imgURL%>">
            </div>
          <p class="w3-xlarge"><%=s.speakername%></p>
          <p><%=s.designation%>, <%=s.company%></p><br>
          <a class="w3-button w3-black w3-padding-large" href="/speakers/<%=s.speakername%>">View Profile</a><br><br>
          <a class="w3-button w3-black w3-padding-large" href="/speakers/<%=s.speakername%>/edit">Edit Profile</a><br><br>
          <form action="/events/<%=event1.name%>/removespeaker" method="POST">
            <button type="submit" name="speakerToRemove" value="<%=s.speakername%>" class="w3-button w3-red w3-padding-large">Remove from list</button>
          </form>

        </div> <br><br><br>



   <% }) %>



    <a class="w3-button w3-red"  href="/events/<%=event1.name%>/addspeaker">
      <i class="fa fa-plus"></i>  Add speaker
    </a><br><br>  

    <form action="/events/<%=event1.name%>/addexistingspeaker" method="POST">


    <select name="existingspeaker" style="width: 50%;padding: 16px 20px; border: none; border-radius: 4px; background-color: #ffa4e5;">
    <% speakersList1.forEach(function(s){ %>

        <option value="<%=s.speakername%>" class="w3-button w3-red w3-padding-large"><strong><em><%=s.speakername%></em></strong>,  <%=s.designation%>, <%=s.company%></option>

    <% }) %>

  </select>
  <br><br>

  <button type="submit" name="existingSpeakerToAdd" value="" class="w3-button w3-red w3-padding-large">Add from among existing speakers</button>


</form>


    
    
   
    
    
  </div>
</div>
<hr>


<!--Don't give them the meeting link unless they've RSVP'd-->






<!-- Footer -->
<footer class="w3-center w3-black w3-padding-64">
  <a href="#home" class="w3-button w3-light-grey"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a><br><br>
  <a href="/admin" class="w3-button w3-light-grey"><i class="fa fa-arrow-left w3-margin-right"></i>Back to dashboard</a>

  <div class="w3-xlarge w3-section">
    <i class="fa fa-facebook-official w3-hover-opacity"></i>
    <i class="fa fa-instagram w3-hover-opacity"></i>
    <i class="fa fa-snapchat w3-hover-opacity"></i>
    <i class="fa fa-pinterest-p w3-hover-opacity"></i>
    <i class="fa fa-twitter w3-hover-opacity"></i>
    <i class="fa fa-linkedin w3-hover-opacity"></i>
  </div>
  <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" title="W3.CSS" target="_blank" class="w3-hover-text-green">w3.css</a></p>
</footer>
 
<script>
// Modal Image Gallery
function onClick(element) {
  document.getElementById("img01").src = element.src;
  document.getElementById("modal01").style.display = "block";
  var captionText = document.getElementById("caption");
  captionText.innerHTML = element.alt;
}


// Toggle between showing and hiding the sidebar when clicking the menu icon
var mySidebar = document.getElementById("mySidebar");

function w3_open() {
  if (mySidebar.style.display === 'block') {
    mySidebar.style.display = 'none';
  } else {
    mySidebar.style.display = 'block';
  }
}

// Close the sidebar with the close button
function w3_close() {
    mySidebar.style.display = "none";
}
</script>

</body>
</html>
