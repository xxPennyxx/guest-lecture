<%- include ("partials/signupLoginHeader") -%>
<!--    <img src="amrita.png">
-->
    
    <main class="red form-signin w-100 m-auto">
        <form  action="/signup" method="post" name="signupform" onsubmit="setInvalid()">
          <h2 class=" standout h4 mb-3 fw-normal">Sign Up</h2>
          
       
      
          
          <div class="form-floating top">
            <input type="text" name="username" id="username" class="form-control forms top"  placeholder="Username" required>
            <label for="username">Username</label>
          </div>
          <div class="form-floating">
              <input type="text" id="email" name="email" class="form-control middle"  placeholder="name@example.com" required>
              <label for="email">Email address</label>
            </div>
          <div class="form-floating">
              <input type="password" name="createps" id="createps" class="form-control middle"  placeholder="Create Password" required>
              <label for="createps">Create Password</label>
            </div>
            <div class="form-floating">
              <input type="password" name="confirmps" id="confirmps" class="form-control middle" placeholder="Confirm Password" required>
              <label for="confirmps">Confirm Password</label>
            </div>

            
            
          
            <br>
            
            
      
          
          <button class="w-100 btn btn-lg btn-dark" type="submit">Create Account</button>
        </form><br>
        <p>Already an existing user? <a href="/login">Login</a></p>
      </main>
      <center>
      <div class="blue instructions">
        <p>For students: Username must be your roll number (eg. CB.EN.U4CSE20XXX)<br>
        For faculty: Username must be of the format initials_name (eg. p_mukesh)<br>
        Password length must be minimum 8 characters and must feature at least one letter of both cases, a numeric and special character.</p>
      </div></center>
    
    
    </div>
      
      <%- include ("partials/signupLoginFooter") -%>

      
      